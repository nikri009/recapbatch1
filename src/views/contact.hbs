    <!-- core code -->
<div style="">
    <div class="container" style="margin-top: 20px; margin-bottom: 50px; ">
        <form class="border" style="width: 80%; padding-bottom: 50px; border-radius: 15px; background-color: #fff;">
            <br>
            <h2 style="text-align: center;">Get In Touch</h2>
            <br>
            <div class="row mb-3">
                <div class="col-mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label" style="width: 40%;"><h5>Project Name</h5></label>
                  <input type="text" class="form-control" id="inputNama" rows="3">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label" style="width: 40%;"><h5>Email</h5></label>
                  <input type="text" class="form-control" id="inputEmail" rows="3">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-mb-3">
                  <label for="inputEmail3" class="col-sm-2 col-form-label" style="width: 40%;"><h5>Phone Number</h5></label>
                  <input type="text" class="form-control" id="inputPhone" rows="3">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-mb-3">
                    <label ><h5>Subject</h5></label>
                    <select class="form-select" id="inputSubject">
                        <option></option>
                        <option >frontend Develover</option>
                        <option >Backend Develover</option>
                        <option >fullstack Develover</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group">
                  <label for="exampleFormControlTextarea1"><h5>Your Message</h5></label>
                  <textarea class="form-control" id="inputMessege" rows="3"></textarea>
                </div>
            </div>
            <div style="display: flex; justify-content: right; margin-right: 32px; margin-top: 10px;">
                <button type="submit" class="btn" onclick="data()" style="background-color: black; color:#fff;">Submit</button>
            </div>
        </form>
    </div>
  </div>




